<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.libdmtx</groupId>
    <artifactId>libdmtx-wrapper</artifactId>
    <version>0.7.7-ab7954cc020201caa5eea301a27bb3e34cf05d8e</version>
    <packaging>jar</packaging>

    <name>libdmtx-wrapper</name>
    <description>A JNI for the dmtx library, bundled and compiled for linux and windows.</description>
    <url>http://github.com/ascarrambad/libdmtx-java-wrapper</url>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Matteo Riva</name>
            <email>matteoriva@me.com</email>
        </developer>
        <developer>
            <name>Mike Laughton</name>
            <email>mike@dragonflylogic.com</email>
        </developer>
        <developer>
            <name>Vadim A. Misbakh-Soloviov</name>
            <email>mike@dragonflylogic.com</email>
        </developer>
        <developer>
            <name>Pete Calvert</name>
            <email>mike@dragonflylogic.com</email>
        </developer>
        <developer>
            <name>Dikran Seropian</name>
            <email>mike@dragonflylogic.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/ascarrambad/libdmtx-java-wrapper.git</connection>
        <developerConnection>scm:git:ssh://github.com:ascarrambad/libdmtx-java-wrapper.git</developerConnection>
        <url>http://github.com/ascarrambad/libdmtx-java-wrapper/tree/main</url>
    </scm>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <!-- WINDOWS -->
                    <include>**/*.lib</include>
                    <include>**/*.dll</include>
                    <!--  LINUX  -->
                    <include>**/*.a</include>
                    <include>**/*.so</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>